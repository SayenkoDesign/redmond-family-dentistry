<footer class="footer">
    <div class="footer-icons">
        <div class="row column">
            {% for column in SP.ACF.get_field('footer_icons', 'option') %}
                <div class="icon-title">
                    <div class="footer-icon">
                        {% if column.link_type == 'url' %}
                            <a href="{{ column.url }}"><img src="{{ column.icon.url }}" /></a>
                        {% elseif column.link_type == "appointment" %}
                            <a href="#contact-form" class="contact fancybox"><img src="{{ column.icon.url }}" /></a>
                        {% else %}
                            <img src="{{ column.icon.url }}" />
                        {% endif %}

                    </div>
                    <h2><small>{{ column.small_header }}</small> {{ column.large_header }}</h2>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="footer-content">
        <div class="row">
            <div class="column medium-3">
                <img class="logo" src="{{ SP.ACF.get_field('logo', 'option').url }}" alt="" />
                <div class="row column">
                    {% if SP.ACF.get_field('facebook', 'option') %}
                        <a href="{{ SP.ACF.get_field('facebook', 'option') }}" target="_blank"><div class="facebook"><i class="fa fa-facebook" aria-hidden="true"></i></div></a>
                    {% endif %}
                    {% if SP.ACF.get_field('twitter', 'option') %}
                        <a href="{{ SP.ACF.get_field('twitter', 'option') }}" target="_blank"><div class="twitter"><i class="fa fa-twitter" aria-hidden="true"></i></div></a>
                    {% endif %}
                    {% if SP.ACF.get_field('pinterest', 'option') %}
                        <a href="{{ SP.ACF.get_field('pinterest', 'option') }}" target="_blank"><div class="pinterest"><i class="fa fa-pinterest-p" aria-hidden="true"></i></div></a>
                    {% endif %}
                    {% if SP.ACF.get_field('google_plus', 'option') %}
                        <a href="{{ SP.ACF.get_field('google_plus', 'option') }}" target="_blank"><div class="google_plus"><i class="fa fa-google-plus" aria-hidden="true"></i></div></a>
                    {% endif %}
                </div>
            </div>
            <div class="column hide-for-small-only medium-3">
                {{ footer_1 }}
            </div>
            <div class="column hide-for-small-only medium-3">
                {{ footer_2 }}
            </div>
            <div class="column medium-3">
                {{ footer_3 }}
            </div>
        </div>
    </div>
    <div class="copyright row column">
        {{ SP.ACF.get_field('copyright', 'option') }}
    </div>
</footer>
